          "scoreDisplayMode": "binary",
          "dataCollector": null,
          "scorer": null
        },
        "broken-links": {
          "id": "broken-links",
          "title": "Broken Links / 404s",
          "description": "Checks for broken internal links",
          "scoreDisplayMode": "binary",
          "dataCollector": null,
          "scorer": null
        },
        "manifest-file": {
          "id": "manifest-file",
          "title": "Manifest File",
          "description": "Checks for manifest.webmanifest file accessibility",
          "scoreDisplayMode": "binary",
          "dataCollector": null,
          "scorer": null
        }
      }
    }
  }
}